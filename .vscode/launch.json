{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js Debug",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "windows": {
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js Production Debug",
      "program": "${workspaceFolder}/.next/standalone/server.js",
      "runtimeArgs": ["--inspect"]
    }
  ]
}
